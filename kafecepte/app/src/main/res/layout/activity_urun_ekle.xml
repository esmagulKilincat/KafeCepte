<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pizzaligeniskedi"
    tools:context=".UrunEkle">

    <LinearLayout
        android:layout_width="129dp"
        android:layout_height="105dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="135dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout2"
        tools:layout_editor_absoluteY="422dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RadioGroup>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="378dp"
        android:layout_height="105dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="30dp"
        android:layout_marginTop="32dp"
        android:background="@color/cardview_shadow_end_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etMenuAd"
        android:layout_width="164dp"
        android:layout_height="41dp"
        android:layout_marginTop="24dp"
        android:background="?android:selectableItemBackground"
        android:ems="10"
        android:fontFamily="@font/archivo_black"
        android:gravity="center"
        android:hint="Ürün Adı?"
        android:inputType="textPersonName"
        android:textColorHint="#a9663a"
        app:layout_constraintEnd_toStartOf="@+id/etMenuAd2"
        app:layout_constraintHorizontal_bias="0.355"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eturunicindekiler"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/etResimURL"
        android:layout_width="408dp"
        android:layout_height="36dp"
        android:layout_marginTop="76dp"
        android:background="?android:selectableItemBackground"
        android:ems="10"
        android:fontFamily="@font/archivo_black"
        android:gravity="center"
        android:hint="Resin URL"
        android:inputType="textPersonName"
        android:textColorHint="#a9663a"
        app:layout_constraintEnd_toStartOf="@+id/etMenuAd2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eturunicindekiler"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/eturunicindekiler"
        android:layout_width="392dp"
        android:layout_height="71dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:background="?android:selectableItemBackground"
        android:ems="10"
        android:fontFamily="@font/archivo_black"
        android:gravity="center"
        android:hint="Ürün İçindekiler?"
        android:inputType="textPersonName"
        android:textColorHint="#a9663a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/etMenuAd2"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="16dp"
        android:background="?android:selectableItemBackground"
        android:ems="10"
        android:fontFamily="@font/archivo_black"
        android:gravity="center"
        android:hint="Fiyat?"
        android:inputType="textPersonName"
        android:textColorHint="#a9663a"
        app:layout_constraintBottom_toTopOf="@+id/buttonyukle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etMenuAd"
        app:layout_constraintTop_toBottomOf="@+id/eturunicindekiler"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TouchTargetSizeCheck" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="192dp"
        android:layout_height="295dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="1dp"

        android:layout_marginBottom="52dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <RadioGroup
            android:id="@+id/radiogrup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/corbabutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:shadowColor="#FFF7F7"
                android:text="Dondurma Ekle"
                android:textColor="#a9663a"
                android:textColorHighlight="#ECE8E8"
                android:textColorHint="#EFECEC"
                android:textColorLink="#FFFFFF" />

            <RadioButton
                android:id="@+id/anayemekbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:shadowColor="#FFF7F7"
                android:text="Smoothie Ekle"
                android:textColor="#a9663a"
                android:textColorHighlight="#ECE8E8"
                android:textColorHint="#EFECEC"
                android:textColorLink="#FFFFFF" />

            <RadioButton
                android:id="@+id/salatabutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:shadowColor="#FFF7F7"
                android:text="Soğuk Kahve Ekle"
                android:textColor="#a9663a"
                android:textColorHighlight="#ECE8E8"
                android:textColorHint="#EFECEC"
                android:textColorLink="#FFFFFF" />

            <RadioButton
                android:id="@+id/tatlibutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:shadowColor="#FFF7F7"
                android:text="Sıcak Kahve Ekle"
                android:textColor="#a9663a"
                android:textColorHighlight="#ECE8E8"
                android:textColorHint="#EFECEC"
                android:textColorLink="#FFFFFF" />

            <RadioButton
                android:id="@+id/sogukicecekbutton"
                android:layout_width="158dp"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:shadowColor="#FFF7F7"
                android:text="Tatlı Ekle"
                android:textColor="#a9663a"
                android:textColorHighlight="#ECE8E8"
                android:textColorHint="#EFECEC"
                android:textColorLink="#FFFFFF" />

            <RadioButton
                android:id="@+id/sıcakicecekbutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:text="Çay Ekle"
                android:textColor="#a9663a" />

        </RadioGroup>

    </LinearLayout>

    <Button
        android:id="@+id/buttonyukle"
        android:layout_width="180dp"
        android:layout_height="63dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/mavibutton1"
        android:fontFamily="@font/bungee_inline"
        android:text="Ürün Kaydet"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/etResimURL"
        tools:layout_editor_absoluteX="218dp" />

</androidx.constraintlayout.widget.ConstraintLayout>