<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kullanicikarsilayankedi"
    tools:context=".UyeLoginSayfasi">

    <ImageView
        android:id="@+id/menuimage"
        android:layout_width="73dp"
        android:layout_height="57dp"
        android:layout_marginStart="300dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/ic_baseline_menu_245"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_menu_24" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="20dp"
        android:text="MENÜ"
        android:textColor="#5f00bf "
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.796"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="150dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="GÜNCELLE"
        android:textColor="#5f00bf "
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/profileimage"
        android:layout_width="71dp"
        android:layout_height="46dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="4dp"
        android:background="#000000 "
        app:layout_constraintBottom_toTopOf="@+id/textView18"
        app:layout_constraintEnd_toStartOf="@+id/menuimage"
        app:layout_constraintHorizontal_bias="0.808"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_account_box_24" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="92dp"
        android:layout_height="49dp"
        android:layout_marginStart="30dp"
        android:gravity="center|right"
        android:text="E-mail : "
        android:textColor="#5f00bf "
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/mailtext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="92dp"
        android:layout_height="49dp"
        android:layout_marginStart="30dp"
        android:gravity="center|right"
        android:text="Telefon : "
        android:textColor="#5f00bf "
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/phonetext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="92dp"
        android:layout_height="49dp"
        android:layout_marginTop="310dp"
        android:gravity="center|right"
        android:text="İsim : "
        android:textColor="#5f00bf "
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/adsoyadtext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mailtext"
        android:layout_width="264dp"
        android:layout_height="50dp"
        android:gravity="center|start"
        android:text="kullanıcı mail"
        android:textColor="#5f00bf"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/phonetext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/adsoyadtext" />

    <TextView
        android:id="@+id/phonetext"
        android:layout_width="267dp"
        android:layout_height="51dp"
        android:layout_marginStart="15dp"
        android:gravity="center|start"
        android:text="kullanıcı telefon"
        android:textColor="#5f00bf"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView24"
        app:layout_constraintTop_toBottomOf="@+id/mailtext" />

    <TextView
        android:id="@+id/adsoyadtext"
        android:layout_width="251dp"
        android:layout_height="47dp"
        android:layout_marginTop="310dp"
        android:gravity="center|start"
        android:text="kullanıcı ad-soyad"
        android:textColor="#5f00bf"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView26"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cikisbutton"
        android:layout_width="120dp"
        android:layout_height="57dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/buttoncolor"
        android:text="Çıkış "
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/hesapsilbutton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView24"
        app:layout_constraintVertical_bias="0.301" />

    <Button
        android:id="@+id/hesapsilbutton"
        android:layout_width="185dp"
        android:layout_height="57dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/buttoncolor"
        android:text="Hesabı Sil"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cikisbutton"
        app:layout_constraintTop_toBottomOf="@+id/textView24"
        app:layout_constraintVertical_bias="0.301" />
</androidx.constraintlayout.widget.ConstraintLayout>